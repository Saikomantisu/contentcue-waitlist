---
// Styles
import '@/styles/starwind.css';

// Components
import Nav from '@/components/ui/Nav.astro';
import Analytics from '@vercel/analytics/astro';

// Constants
const SITE_URL = 'contentcue.xyz';
const SITE_TITLE = 'Join the ContentCue Waitlist - Turn Keywords into SEO Blog Ideas';
const SITE_DESCRIPTION =
  'Type a keyword, get SEO-ready ideas and full blog outlines in seconds. Built for creators who hate overthinking.';
const SITE_IMAGE = '/twitter-banner.png';
---

<html lang='en'>
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src='https://www.googletagmanager.com/gtag/js?id=G-S3ENTB01YS'></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-S3ENTB01YS');
    </script>

    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-WQHN4KFF');
    </script>
    <!-- End Google Tag Manager -->

    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />

    <!-- SEO -->
    <link rel='canonical' href={SITE_URL} />

    <!-- Open Graph -->
    <meta property='og:title' content={SITE_TITLE} />
    <meta property='og:description' content={SITE_DESCRIPTION} />
    <meta property='og:url' content={SITE_URL} />
    <meta property='og:image' content={SITE_IMAGE} />
    <meta property='og:image:url' content={SITE_IMAGE} />
    <meta property='og:image:secure_url' content={SITE_IMAGE} />
    <meta property='og:image:width' content='1200' />
    <meta property='og:image:height' content='600' />
    <meta property='og:image:alt' content={SITE_TITLE} />

    <!-- Twitter -->
    <meta name='twitter:title' content={SITE_TITLE} />
    <meta name='twitter:description' content={SITE_DESCRIPTION} />
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:image' content={SITE_IMAGE} />
    <meta name='twitter:image:alt' content={SITE_TITLE} />
    <meta name='twitter:domain' content={SITE_URL} />

    <Analytics />

    <title>{SITE_TITLE}</title>
  </head>
  <body class='max-w-7xl mx-auto'>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src='https://www.googletagmanager.com/ns.html?id=GTM-WQHN4KFF'
        height='0'
        width='0'
        style='display:none;visibility:hidden'
      >
      </iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Nav />
    <main class='grid gap-6 px-4'>
      <slot />
    </main>
  </body>
</html>
